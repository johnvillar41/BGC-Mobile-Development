<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="emp.project.softwareengineerproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".View.NotificationView.NotificationsActivityView"></activity>
        <activity android:name=".View.UsersView.UsersAddActivityView" />
        <activity android:name=".View.LoadingScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.InventoryView.InventorySearchItemView" />
        <activity android:name=".View.InventoryView.InventoryUpdateView" />
        <activity android:name=".View.SettingsActivityView" />
        <activity android:name=".View.UsersView.UsersActivityView" />
        <activity android:name=".View.ReportsActivityView" />
        <activity android:name=".View.SalesActivityView" />
        <activity android:name=".View.InventoryView.InventoryActivityView" />
        <activity android:name=".View.MainMenuActivityView" />
        <activity android:name=".View.LoginActivityView" />
    </application>

</manifest>